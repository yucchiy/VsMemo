{
  "name": "vsmemo",
  "displayName": "VsMemo",
  "description": "Comprehensive memo management system with cross-linking, backlink analysis, and interactive graph visualization for VS Code",
  "version": "0.9.0",
  "publisher": "yucchiy",
  "author": {
    "name": "yucchiy"
  },
  "license": "MIT",
  "homepage": "https://github.com/yucchiy/VsMemo",
  "repository": {
    "type": "git",
    "url": "https://github.com/yucchiy/VsMemo.git"
  },
  "bugs": {
    "url": "https://github.com/yucchiy/VsMemo/issues"
  },
  "keywords": [
    "memo",
    "notes",
    "markdown",
    "template",
    "backlinks",
    "graph",
    "visualization",
    "cross-reference",
    "knowledge management",
    "note-taking"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vsmemo.createMemo",
        "title": "Create New Memo",
        "category": "VsMemo"
      },
      {
        "command": "vsmemo.listMemos",
        "title": "List Memos",
        "category": "VsMemo"
      },
      {
        "command": "vsmemo.commitChanges",
        "title": "Commit Memo Changes",
        "category": "VsMemo"
      },
      {
        "command": "vsmemo.git.pull",
        "title": "Pull Changes from Remote",
        "category": "VsMemo",
        "icon": "$(cloud-download)"
      },
      {
        "command": "vsmemo.git.sync",
        "title": "Sync with Remote (Pull & Push)",
        "category": "VsMemo",
        "icon": "$(sync)"
      },
      {
        "command": "vsmemo.refreshMemoExplorer",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vsmemo.createMemoFromType",
        "title": "Create New Memo",
        "icon": "$(add)"
      },
      {
        "command": "vsmemo.insertMemoLink",
        "title": "Insert Memo Link",
        "category": "VsMemo"
      },
      {
        "command": "vsmemo.openMemoFromPreview",
        "title": "Open Memo from Preview"
      },
      {
        "command": "vsmemo.renameMemo",
        "title": "Rename Memo",
        "icon": "$(edit)"
      },
      {
        "command": "vsmemo.deleteMemo",
        "title": "Delete Memo",
        "icon": "$(trash)"
      },
      {
        "command": "vsmemo.showBacklinks",
        "title": "Show Backlinks",
        "category": "VsMemo"
      },
      {
        "command": "vsmemo.refreshBacklinks",
        "title": "Refresh Backlink Index",
        "icon": "$(sync)"
      },
      {
        "command": "vsmemo.showOrphanedMemos",
        "title": "Show Orphaned Memos",
        "category": "VsMemo"
      },
      {
        "command": "vsmemo.showLinkStatistics",
        "title": "Show Link Statistics",
        "category": "VsMemo"
      },
      {
        "command": "vsmemo.showGraph",
        "title": "Show Memo Graph",
        "category": "VsMemo",
        "icon": "$(graph)"
      },
      {
        "command": "vsmemo.searchByTag",
        "title": "Search Memos by Tag",
        "category": "VsMemo",
        "icon": "$(tag)"
      },
      {
        "command": "vsmemo.searchMemos",
        "title": "Search Memos",
        "category": "VsMemo",
        "icon": "$(search)"
      }
    ],
    "markdown.markdownItPlugins": true,
    "views": {
      "explorer": [
        {
          "id": "vsmemoExplorer",
          "name": "VsMemo",
          "when": "workbenchState != empty"
        },
        {
          "id": "memoInsightsView",
          "name": "Insight",
          "when": "workbenchState != empty"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vsmemo.refreshMemoExplorer",
          "when": "view == vsmemoExplorer",
          "group": "navigation"
        },
        {
          "command": "vsmemo.refreshBacklinks",
          "when": "view == memoInsightsView",
          "group": "navigation"
        },
        {
          "command": "vsmemo.showOrphanedMemos",
          "when": "view == memoInsightsView",
          "group": "1_queries@1"
        },
        {
          "command": "vsmemo.showLinkStatistics",
          "when": "view == memoInsightsView",
          "group": "1_queries@2"
        },
        {
          "command": "vsmemo.showGraph",
          "when": "view == memoInsightsView",
          "group": "1_queries@3"
        }
      ],
      "view/item/context": [
        {
          "command": "vsmemo.createMemoFromType",
          "when": "view == vsmemoExplorer && viewItem == memoType",
          "group": "inline"
        },
        {
          "command": "vsmemo.renameMemo",
          "when": "view == vsmemoExplorer && viewItem == memoFile",
          "group": "edit@1"
        },
        {
          "command": "vsmemo.deleteMemo",
          "when": "view == vsmemoExplorer && viewItem == memoFile",
          "group": "edit@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "cytoscape": "^3.32.0",
    "cytoscape-cose-bilkent": "^4.1.0",
    "simple-git": "^3.28.0"
  }
}
